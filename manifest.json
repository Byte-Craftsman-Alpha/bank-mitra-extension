{
    "manifest_version": 3,
    "name": "CSC Ghoghara Custom Extension",
    "version": "2.0",
    "description": "Extension designed to provide some additional features to the various important webpages.",
    "icons": {
        "16": "resources/icon16.png",
        "48": "resources/icon48.png",
        "128": "resources/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/html2canvas.js",
                "lib/html2canvas.min.js",
                "scripts/env.js",
                "scripts/setup.js",
                "templete/receipt_structure.js",
                "scripts/script.js"
            ]
        }
    ],
    "permissions": [
        "scripting"
    ]
}